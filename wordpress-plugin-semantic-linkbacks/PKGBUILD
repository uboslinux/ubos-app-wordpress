developer=https://profiles.wordpress.org/pfefferle/
url=$developer
maintainer="http://indiecomputing.com/"
pkgname=$(basename $(pwd))
_plugin=${pkgname/wordpress-plugin-/}
pkgver=3.2.0
pkgrel=3
pkgdesc="Semantic Trackbacks, Pingbacks and WebMentions for WordPress"
arch=('any')
license=("GPL")
source=("http://downloads.wordpress.org/plugin/${_plugin}.${pkgver}.zip")
depends=(
    'wordpress'
)
options=('!strip')
sha512sums=('SKIP')

package() {
# Manifest
    mkdir -p ${pkgdir}/var/lib/ubos/manifests
    install -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/var/lib/ubos/manifests/${pkgname}.json

# Icons
    # mkdir -p ${pkgdir}/srv/http/_appicons/${pkgname}
    # install -m644 ${startdir}/appicons/{72x72,144x144}.png $pkgdir/srv/http/_appicons/${pkgname}/

# Source
    mkdir -p ${pkgdir}/usr/share/${pkgname}

    cp -a ${srcdir}/${_plugin} $pkgdir/usr/share/${pkgname}/
}
