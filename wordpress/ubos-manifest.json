{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/blog",
            "depends" : [
                "php",
                "php-apache",
                "php-gd",
                "smtp-server",
                "composer"
            ],
            "apache2modules" : [
                "php",
                "rewrite"
            ],
            "phpmodules" : [
                "gd",
                "iconv",
                "mysqli",
                "pdo_mysql"
            ],

            "wellknown" : {
                "robotstxt" : {
                    "disallow" : [
                        "/wp-admin/"
                    ]
                },
                "robots.txt" : {
                    "disallow" : [
                        "/wp-admin/"
                    ]
                }
            },

            "appconfigitems" : [
                {
                    "type" : "directorytree",
                    "names" : [
                        "index.php",
                        "wp-activate.php",
                        "wp-admin",
                        "wp-blog-header.php",
                        "wp-comments-post.php",
                        "wp-cron.php",
                        "wp-includes",
                        "wp-links-opml.php",
                        "wp-load.php",
                        "wp-login.php",
                        "wp-mail.php",
                        "wp-settings.php",
                        "wp-signup.php",
                        "wp-trackback.php",
                        "xmlrpc.php"
                    ],
                    "source" : "/ubos/share/wordpress/wordpress/$2"
                },
                {
                    "type" : "directory",
                    "name" : "wp-content"
                },
                {
                    "type"  : "directory",
                    "names" : [
                        "wp-content/plugins",
                        "wp-content/themes"
                    ]
                },
                {
                    "type" : "directorytree",
                    "names" : [
                        "wp-content/plugins/akismet",
                        "wp-content/themes/twentytwenty",
                        "wp-content/themes/twentynineteen"
                    ],
                    "source" : "/ubos/share/wordpress/wordpress/$1"
                },
                {
                    "type"  : "directory",
                    "name"  : "wp-content/uploads",
                    "mode"  : "0755",
                    "uname" : "${apache2.uname}",
                    "gname" : "${apache2.gname}",
                    "retentionpolicy" : "keep",
                    "retentionbucket" : "uploadsdir"
                },
                {
                    "type"         : "file",
                    "name"         : "wp-config.php",
                    "template"     : "tmpl/wp-config.pl",
                    "templatelang" : "perlscript"
                },
                {
                    "type"         : "file",
                    "name"         : ".htaccess",
                    "template"     : "tmpl/htaccess.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "file",
                    "name"         : "wp-content/.htaccess",
                    "template"     : "tmpl/wp-content-htaccess.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type" : "systemd-service",
                    "name" : "smtp-server@${appconfig.appconfigid}"
                }
            ],
            "installers" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/initialize.pl"
                }
            ],
            "upgraders" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/upgrade.pl"
                }
            ]
        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"       : "database",
                    "name"       : "maindb",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "maindb",
                    "privileges" : "all privileges"
                }
            ]
        }
    },
    "customizationpoints" : {
        "title" : {
            "name"    : "Blog Title",
            "type"    : "string",
            "required" : false,
            "default" : {
                "value" : "My Wordpress Blog"
            }
        }
    }
}
