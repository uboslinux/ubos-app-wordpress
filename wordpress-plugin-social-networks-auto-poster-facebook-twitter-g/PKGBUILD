developer='http://nextscripts.com/'
url='https://wordpress.org/plugins/social-networks-auto-poster-facebook-twitter-g/'
maintainer=${developer}
pkgname=$(basename $(pwd))
_plugin=${pkgname/wordpress-plugin-/}
pkgver=4.4.2
pkgrel=1
pkgdesc='Automaticlly publishes posts from your blog to social networks'
arch=('any')
license=('GPL')
source=("${_plugin}.${pkgver}.zip::http://downloads.wordpress.org/plugin/${_plugin}.zip")
depends=(
    'wordpress'
)
releasepage=("https://wordpress.org/plugins/${_plugin}/")
options=('!strip')
sha512sums=('SKIP')

package() {
# Manifest
    install -D -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json

# Icons
#    install -D -m644 ${startdir}/appicons/{72x72,144x144}.png -t ${pkgdir}/ubos/http/_appicons/${pkgname}/

# Source
    mkdir -p ${pkgdir}/ubos/share/${pkgname}

    cp -a ${srcdir}/${_plugin} ${pkgdir}/ubos/share/${pkgname}/
}
